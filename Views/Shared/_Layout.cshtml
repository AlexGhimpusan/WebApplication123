<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication123</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication123.styles.css" asp-append-version="true" />
    <!-- Custom styles -->
    <style>
        a {
            text-decoration: none;
            color: black;
        }

        #joinBtn:hover {
            cursor: pointer;
            transform: scale(1.05);
        }

        .classCard:hover {
            cursor: pointer;
            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
        }
    </style>
</head>
<body>
    <header>
        <!-- Bara de navigatie -->
        <div class="bg-light sticky-top">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="left-side d-flex">
                        <a class="btn btn-outline-primary" asp-controller="Courses" asp-action="Index">
                            Cursurile mele
                        </a>
                        <button class="btn btn-outline-primary mx-2">
                            Temele mele
                        </button>
                        <button class="btn btn-outline-primary">
                            Notele mele
                        </button>
                    </div>

                    <div class="right-side d-flex">
                        <a asp-area="" asp-controller="Courses" asp-action="Create"><img src="/img/plus-icon.png" /></a>
                        <button class="btn btn-outline-success mx-2">Profilul meu</button>
                        <button class="btn btn-outline-danger">Login</button>
                    </div>
                </div>
            </nav>
            <hr class="mt-0">
        </div>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer-ul -->
    <footer class="bg-light fixed-bottom">
        <hr class="my-0">
        <div class="container text-center">
            <div>
                <a asp-area="" asp-controller="Teachers" asp-action="Index">Date de contact profesori</a>
            </div>
            <div>
                <small class="text-muted">
                    Using the Google Classroom example for creating this website! Copyright &copy; Google
                    Classroom
                </small>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
