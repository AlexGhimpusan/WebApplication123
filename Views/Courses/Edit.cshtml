@model AspNetCoreEntityFrameworkApp.Models.Course

<h2>Edit Course</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudyYear" class="control-label"></label>
        <input asp-for="StudyYear" class="form-control" />
        <span asp-validation-for="StudyYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Announcements" class="control-label"></label>
        <textarea asp-for="Announcements" class="form-control"></textarea>
        <span asp-validation-for="Announcements" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
