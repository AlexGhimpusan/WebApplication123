@model AspNetCoreEntityFrameworkApp.Models.Course

<!-- Form pentru a te alatura unui curs printr-un cod -->
<form asp-action="Create">
    <div class="container d-flex justify-content-center">
        <div class="card" style="width: 25rem;">
            <div class="card-body">
                <h5 class="card-title text-center">Enter new course details</h5>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudyYear"></label>
                    <input asp-for="StudyYear" class="form-control" />
                    <span asp-validation-for="StudyYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Announcements"></label>
                    <input asp-for="Announcements" class="form-control" />
                    <span asp-validation-for="Announcements" class="text-danger"></span>
                </div>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>